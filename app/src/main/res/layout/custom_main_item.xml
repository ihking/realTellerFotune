<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86.7dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_weight="0.85"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="2016.08.22" />
            
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/pick_border"
            android:gravity="right"
            android:layout_marginRight="25dp"
            android:padding="5dp"
            android:text="소근소근 서"
            android:textColor="#eb3573" />
            
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/clock" />
            
            <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="how!!"
            android:textColor="#000000" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/location" />
            
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울특별시 강남구 신사동 에딕티드샵" />
        </LinearLayout>
    </LinearLayout>
    
    <!--and define android:background="@drawable/my_custom_background".-->
    
    
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0.15">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            
            <RelativeLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|right"
                android:background="@drawable/border">
                
                <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="6명"
                android:textSize="23dp" />
                
            </RelativeLayout>
            
            <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/human"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <!--윤교환 073 - 21 - 0669 - 800-->
        
        
    </FrameLayout>
    
</LinearLayout>