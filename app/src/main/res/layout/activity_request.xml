<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.han.compass.request.CircleDrawing
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60.3dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/gpsButton"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/check_icon" />


        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/gpsButton"
            android:layout_toRightOf="@+id/gpsButton"
            android:queryHint="현재 위치를 지정해주세요!" />
    </RelativeLayout>

    <Button
        android:id="@+id/select"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginTop="45.3dp"
        android:background="@mipmap/heart_blue"/>

</LinearLayout>